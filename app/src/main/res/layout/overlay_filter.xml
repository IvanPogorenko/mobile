<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay"
    android:id="@+id/overlay"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/white"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Выберите важные пункты совпадения"
                        android:layout_marginRight="10dp">
                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close"
                        android:id="@+id/close">

                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Интересы"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp">
                    </TextView>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/interestsContainer"
                    app:flexWrap="wrap"
                    app:flexDirection="row"
                    app:alignItems="stretch"
                    app:justifyContent="space_between">

                        <TextView
                            android:id="@+id/interest1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Интерес 1"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/interest2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Интерес 2"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/interest3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Интерес 3"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Био"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp">
                    </TextView>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bioContainer"
                        app:flexWrap="wrap"
                        app:flexDirection="row"
                        app:alignItems="stretch"
                        app:justifyContent="space_between"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/bio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Био 1"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/bio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Био 2"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/bi3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Био 3"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Языки"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp">
                    </TextView>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/languageContainer"
                        app:flexWrap="wrap"
                        app:flexDirection="row"
                        app:alignItems="stretch"
                        app:justifyContent="space_between"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/language1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Язык 1"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/language2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Язык 2"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/language3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"                       android:background="@drawable/selected"
                            android:gravity="center"
                            android:text="Язык 3"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сохранить"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_gravity="end">
                    </Button>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>